<!DOCTYPE html>
<html>
  <head>
    <title>WellcomeTicehurst</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% unless current_page?(root_path) %>
